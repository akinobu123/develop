#ifndef _SYNCHRONIZER_H
#define _SYNCHRONIZER_H

#include <pthread.h>

class CSynchronizer2
{
private:
    CSynchronizer2();

public:
    virtual ~CSynchronizer2();
    static CSynchronizer2 *createInstance();
    void lock();
    void unlock();
    void wait();
    void notifyAll();

private:
    pthread_t fThreadID;
    pthread_mutex_t fLock;
    pthread_cond_t fNotified;
};

#endif /* _SYNCHRONIZER_H */
