#ifndef _CLIB_C_SYNCHRONIZED_H
#define _CLIB_C_SYNCHRONIZED_H

#include <stddef.h>
#include "CSynchronizer2.h"

class CSynchronized
{
public:
    CSynchronized(CSynchronizer2 *sync);
    ~CSynchronized();

    void lock();
    void unlock();
    void wait();
    bool wait(int msec);
    void notifyAll();

private:
    CSynchronizer2 *fSync;
    int fCounter;

private:
    void *operator new(size_t size);
};

#endif /* _CLIB_C_SYNCHRONIZED_H */
